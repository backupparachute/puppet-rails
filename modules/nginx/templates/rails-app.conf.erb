upstream puma {
  server unix:///var/rails/shared/tmp/sockets/puma.sock;
}

server {
  listen 80 default_server deferred;
  # server_name example.com;
 # listen 80
  listen 443 ssl;
  server_name _;

  ssl_certificate     /var/rails/current/ssl/2022/chain.crt;
  ssl_certificate_key /var/rails/current/ssl/2022/priv.key;
  ssl_protocols TLSv1.2;

  root /var/rails/current/public;
  access_log /var/rails/shared/log/nginx.access.log;
  error_log /var/rails/shared/log/nginx.error.log info;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

   location /nginx_status {
       # enables HttpSubStatusModule, only allowed from loopback
       # supports datadog nginx module

        stub_status on;

        access_log off;
        allow 127.0.0.1;
        deny all;
    }

  try_files $uri/index.html $uri @puma;
  location @puma {
    proxy_set_header X-Forwarded-Proto https
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_ignore_client_abort on;

    proxy_pass http://puma;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 256M;
  keepalive_timeout 10;
}
